<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeApp.myPaddingPage"             
             BackgroundColor="Indigo">
    <StackLayout x:Name="myStackLayout" BackgroundColor="Bisque" Margin="10">
            <BoxView Margin="20" HeightRequest="150" BackgroundColor="#A52A2A" CornerRadius="20" >   </BoxView>
            <Entry x:Name="placeHolder" Placeholder="Type your e-mail.." FontSize="Title" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" PlaceholderColor="SkyBlue"></Entry>
        
        </StackLayout>
</ContentPage>